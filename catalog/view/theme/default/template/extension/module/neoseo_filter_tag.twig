<div class="tags side-module box-shadow box-corner">
    {% if heading_title %}
        <h3 class="text-center">{{ heading_title }}</h3>
    {% endif %}
    <div class="filter-tags-{{ module }} collapsed">
        <div class="filter-tags__box">
            {% for tag in tags %}
                <a href="{{ tag.url }}">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="tags-more collapsed"><a href="#"><span></span><i class="fa fa-caret-down"></i></a></div>
</div>

<script>

    $('.filter-tags-{{ module }}').showMore({
        collapsed: '{{ text_collapsed }}',
        incollapsed: '{{ text_incollapsed }}'
    });


</script>
